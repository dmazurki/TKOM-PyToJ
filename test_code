class CompoundStatements(Object):
 def if_stmt(self, a):
  if a.x_int == 1:
   return 1
  elif a.x_int==2:
   return 2
  else:
   return 3

 def while_stmt(self, a):
  i_int = 10
  while a is True:
   i_int-=1
   if i_int == 0:
    a = False
  else:
     print "end"









